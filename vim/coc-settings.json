{
  // Coc
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "vue",
    "json",
    "python",
    "rust",
    "markdown"
  ],
  "coc.preferences.rootPatterns": [".git", ".hg", ".projections.json", "env"],
  // Python
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.local/bin/black",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "~/.local/bin/flake8",
  "python.linting.flake8Args": ["--max-line-length=88"],
  "python.pythonPath": "python",
  // Lists
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.files.excludePatterns": [
    "**/.git/**",
    "**/env/**",
    "**/node_modules/**"
  ],
  "list.source.grep.excludePatterns": [
    "**/.git/**",
    "**/env/**",
    "**/node_modules/**"
  ],
  "list.source.mru.ignoreGitIgnore": true,
  "list.previewSplitRight": true
}
