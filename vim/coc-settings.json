{
  // Coc
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "coc.preferences.rootPatterns": [".git", ".hg", ".projections.json", "env"],
  "outline.sortBy": "position",
  "outline.splitCommand": "botright 40vs",
  "tree.key.toggle": "o",
  "tree.key.selectPrevious": "<C-p>",
  "tree.key.selectNext": "<C-n>",
  // Python
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.local/bin/black",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "~/.local/bin/flake8",
  "python.linting.flake8Args": ["--max-line-length=88"],
  "python.pythonPath": "python",
  "python.analysis.typeCheckingMode": "off",
  // Lists
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.files.excludePatterns": [
    "**/.git/**",
    "**/env/**",
    "**/node_modules/**"
  ],
  "list.source.grep.excludePatterns": [
    "**/.git/**",
    "**/env/**",
    "**/node_modules/**"
  ],
  "list.source.mru.ignoreGitIgnore": true,
  "list.previewSplitRight": true,
  "list.insertMappings": {
    "<C-n>": "normal:j",
    "<C-p>": "normal:k",
    "<A-n>": "prompt:next",
    "<A-p>": "prompt:previous"
  }
}
